<%- include(`partials/header`) %>

    <% if (alert) { %>
        <div class="alert alert-danger" role="alert">
            <%= alert %>
        </div>
        <% } %>
            <div class="container mt-5">

                <div class="row d-flex justify-content-center">
                    <div class="col-md-8">
                        <img src="" alt="Ini buat logonya">
                    </div>
                    <div class="col-md-4 shadow bg-light p-3">
                        <div class="signup-form mt-5">
                            <h1 class="text-center mb-5">Cuitter</h1>
                            <form method="post" action="/users/login">
                                <div class="form-group">
                                    <input type="text" class="form-control" name="username" placeholder="Username"
                                        required>
                                </div>
                                <div class="form-group">
                                    <input type="password" class="form-control" name="password" placeholder="Password"
                                        required>
                                </div>
                                <div class="form-group">
                                    <button type="submit" class="btn btn-success btn-lg btn-block">Login</button>
                                </div>
                            </form>
                            <div class="text-center">Dont have any account? <a href="/user/register">Register</a></div>
                        </div>
                    </div>
                </div>
                <div class="row d-flex justify-content-center bg-light mt-3 shadow">
                </div>
            </div>

            <%- include(`partials/footer`) %>